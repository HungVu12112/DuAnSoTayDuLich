<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/maunen"
    android:orientation="vertical"
    android:padding="20dp"
    tools:context=".activity.ChiaSeActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <ImageView
                android:id="@+id/img_trove_chiase"
                android:layout_width="30dp"
                android:layout_height="match_parent"
                android:background="@drawable/icon_tro_ve_trai" />

            <TextView
                android:layout_width="348dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:text="Travenus"
                android:textColor="@color/white"
                android:textSize="20dp"
                android:textStyle="bold" />
        </LinearLayout>
        <TextView
            android:layout_margin="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Chia sẻ khoảnh khắc của bạn"
            android:textSize="25dp"
            android:textAlignment="center"
            android:textColor="@color/black" />
        <ImageView
            android:id="@+id/imgchiase"
            android:layout_width="400dp"
            android:layout_height="200dp"
            android:src="@drawable/anh_ho_hoan_kiem"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >
            <ImageButton
                android:id="@+id/uploadimg"
                android:layout_width="60dp"
                android:layout_height="50dp"
                android:src="@drawable/icon_image"
                android:layout_margin="10dp"/>

            <ImageButton
                android:id="@+id/cameraimg"
                android:layout_width="60dp"
                android:layout_height="50dp"
                android:layout_margin="10dp"
                android:src="@android:drawable/ic_menu_camera" />
        </LinearLayout>

        <EditText
            android:id="@+id/edttieude"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Tiêu đề" />
        <Button
            android:id="@+id/btndang"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="#C9AE82"
            android:text="Đăng tin"
            android:layout_margin="20dp"/>
        <Button
            android:id="@+id/btnluutru"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="#67512E"
            android:text="Bảng tin"
            android:layout_margin="20dp"/>
    </LinearLayout>
</LinearLayout>