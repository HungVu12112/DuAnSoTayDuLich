<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/maunen"
    android:padding="10dp"
    android:orientation="vertical"
    tools:context=".activity.ThanhPhoActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/img_troveActivity"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:background="@drawable/icon_tro_ve_trai"/>
        <TextView
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Travenus"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:textSize="20dp" />
    </LinearLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:text="Thành phố"
        android:textColor="@color/black"
        android:textSize="25dp"
        android:gravity="center"
        android:id="@+id/tvTenThanhPhoActivity"/>
    <androidx.recyclerview.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="20dp"
        android:id="@+id/id_RecyThanhPhoActivity"/>
</LinearLayout>